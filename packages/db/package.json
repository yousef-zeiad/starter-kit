{
  "name": "@trading-platform/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "default": "./src/auth.ts"
    },
    "./expo-storage": {
      "types": "./dist/expo-storage.d.ts",
      "default": "./src/expo-storage.ts"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./src/types.ts"
    },
    "./stripe": {
      "types": "./dist/stripe.d.ts",
      "default": "./src/stripe.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "stripe": "^19.1.0"
  },
  "devDependencies": {
    "@trading-platform/eslint-config": "workspace:*",
    "@trading-platform/prettier-config": "workspace:*",
    "@trading-platform/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@trading-platform/prettier-config"
}
